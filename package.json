{
  "name": "gj-logger",
  "version": "0.1.0",
  "description": "gcloud logger from JOIN",
  "main": "index.ts",
  "repository": "git@github.com:join-com/gj-logger.git",
  "author": "Anton Versal <ant.ver@gmail.com>",
  "license": "MIT",
  "scripts": {
    "makepretty": "prettier --write '**/*.ts'",
    "lint": "yarn tslint -p ."
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "npx prettier --write"
    ],
    "src/**/*.ts": [
      "npm run lint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run tsc:check && lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "tslint": "^6.0.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "tslint-config-prettier": "^1.18.0"
  }
}
